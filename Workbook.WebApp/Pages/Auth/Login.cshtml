@page
@model Workbook.WebApp.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<p>Please enter your email and password to log in.</p>

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="form-group row">
            <label>Email:</label>
            <input type="email" asp-for="Input.Email" required />
        </div>
        <div class="form-group row">
            <label>Password:</label>
            <input type="password" asp-for="Input.Password" required />
        </div>
        <br />
        <button type="submit">Login</button>
        <br /><br />
        <p>Don’t have an account? <a asp-page="/Auth/Register">Register here</a>.</p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p style="color:red">@Model.ErrorMessage</p>
        }
    </form>
</div>
