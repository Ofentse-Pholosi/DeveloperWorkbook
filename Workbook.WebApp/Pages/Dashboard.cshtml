@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Your Developer Dashboard</h1>
        <p class="lead">Your personalized space for onboarding and growth.</p>
    </div>
    <div class="row text-center">
        <div class="col-md-6 mb-4">
            <i class="fas fa-user fa-3x text-primary mb-3"></i>
            <h3>Your Profile</h3>
            <p>Manage your profile and preferences.</p>
        </div>
        <div class="col-md-6 mb-4">
            <i class="fas fa-book fa-3x text-success mb-3"></i>
            <h3>Learning Resources</h3>
            <p>Access a curated list of resources to enhance your skills.</p>
        </div>
    </div>
    <div class="text-center mt-5">
        <h2>Get Started</h2>
        <p class="mb-4">Explore the features and tools available to you.</p>
    </div>
</div>