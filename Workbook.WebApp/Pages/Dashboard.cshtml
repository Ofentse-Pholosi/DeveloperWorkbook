@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Hey @Model.FirstName @Model.LastName</h1>
        <h1 class="display-4">Welcome to Your Workbook Dashboard</h1>
        <p class="lead">Your personalized space for onboarding and growth.</p>
    </div>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <i class="fas fa-user fa-3x text-primary mb-3"></i>
            <h3>Your Profile</h3>
            <p>Manage your profile information.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="fas fa-rocket fa-3x text-warning mb-3"></i>
            <h3>Get Started</h3>
            <p>Explore your workbook available to you.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="fas fa-book fa-3x text-success mb-3"></i>
            <h3>Add Your Own Resources</h3>
            <p>Curate a list of your resources to enhance your skills.</p>
        </div>
    </div>
</div>